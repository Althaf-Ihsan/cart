<section>
    <div class="row mt-5">
        <div class="col">
            <h2 class="text-center">Edit Product</h2>
            <form enctype="multipart/form-data" method="post" action="/admin/edit/{{product._id}}" autocomplete="off">
                <div class="container">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Product Name</label>
                        <input type="" class="form-control w-50" id="exampleInputEmail1" name="productName" value="{{product.productName}}">
                    </div>
                    <div class="form-group">
                        <label for="dropdown">Category</label>
                        <select class="form-select w-50 bg-light" aria-label="Disabled select example" name="category" >
                            <option selected>{{product.category}}</option>
                            <option value="Mobile">Mobile</option>
                            <option value="Computer">Computer</option>
                            <option value="Accessories">Accessories</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Price</label>
                        <input type="" class="form-control w-50" id="exampleInputPassword1" name="price" value="{{product.price}}">
                    </div>

                    <div class="mb-3">
                        <label for="formFile" class="form-label">image</label>
                        <img src="/product-images/{{product._id}}.jpg" alt="" style="width:100px;height:auto" id="imgView" class="p-2">
                        <input class="form-control w-50" type="file" id="formFile" name="image" onchange="viewImage(event)">
                    </div>

                    <button type="submit" class="btn btn-dark">Submit</button>
            </form>
        </div>
    </div>
    </div>
</section>
<script>
    function viewImage(event)
    {
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>