<section>
    <div class="container mt-5">
        <div class="row ">
             <a href="/admin/add-products" class="btn btn-dark ml-auto">Add Products</a>   
        </div>
 <table class="table mt-5">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">category</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{this.productName}}</th>
      <td>{{this.price}}</td>
      <td>{{this.category}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" height="50" width="50"></td>
      <td><a href="/admin/edit/{{this._id}}" class="btn btn-primary">Edit</a></td>
      <td><a href="/admin/delete-products/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want to delete {{this.product-name}}?')">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>